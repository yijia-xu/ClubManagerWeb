@model Lab5.Models.News

@{
    ViewData["Title"] = "Create";
    var sportClubName = ViewData["SportClubName"] as string;
    var sportClubId = ViewData["SportClubId"] as string;
}

<h1>Upload</h1>

<h4>Upload an add for SportClub @sportClubName</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="file" name="Choose File" class="form-control-file" />
            </div>
            <input type="hidden" name="SportClubId" value="@sportClubId" />
            <div class="form-group">
                <input type="submit" value="Upload Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="News" asp-action="Index" asp-route-id="@sportClubId">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

